root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[Makefile, .gitconfig]
indent_style = tab

[*.md]
indent_style = space
indent_size  = 2

[*.json]
indent_style = space
indent_size  = 2

[.zshrc]
indent_style = space
indent_size  = 2
